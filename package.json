{
    "name": "codesnapro",
    "displayName": "CodeSnap Pro",
    "publisher": "riguz",
    "icon": "assets/icon.png",
    "categories": [
        "Other"
    ],
    "keywords": [
        "screenshot",
        "snippet",
        "snap",
        "clipboard",
        "share",
        "polacode",
        "carbon",
        "codesnap",
        "codesnapro"
    ],
    "description": "Take beautiful screenshots of your code and save to images, support customizing of syntax highlighting and foldering of long code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.75.0"
    },
    "repository": "https://github.com/ywriting/codesnap-pro",
    "main": "./out/extension.js",
    "activationEvents": [
        "onCommand:codesnapro.start"
    ],
    "contributes": {
        "configuration": [
            {
                "title": "CodeSnap Pro",
                "properties": {
                    "codesnapro.backgroundColor": {
                        "scope": "resource",
                        "type": "string",
                        "default": "#abb8c3",
                        "description": "The background color of the snippet's container"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "codesnapro.start",
                "title": "CodeSnapPro ðŸ“¸",
                "icon": "$(code)"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "codesnapro.start"
                }
            ]
        }
    },
    "scripts": {
        "install:all": "npm install && cd webview-ui && npm install",
        "start:webview": "cd webview-ui && npm run start",
        "build:webview": "cd webview-ui && npm run build",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.46.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }
}